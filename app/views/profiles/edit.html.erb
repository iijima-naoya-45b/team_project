<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
    <h1>プロフィール編集</h1>
      <%= form_with(model: @profile, local: true, url: profile_path) do |f| %>
        <div class="mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :language, class:"form-label" %>
          <%= f.text_field :language, class:"form-control mb-3" %>
        </div>
        <div class="mb-3">
        <%= f.label :avatar %>
          <%= f.file_field :avatar, class: 'form-control mb-3', accept: 'image/*'%>
          <%= f.hidden_field :avatar_cache %>
        </div>
        <div class='mt-3 mb-3'>
          <%= image_tag @profile.avatar.url, id: 'preview', class: 'rounded-circle mr15',size: '100x100' %>
        </div>    
        <%= f.submit '更新', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
