<div class = "text-center mb-5">
  <%= image_tag @profile.avatar.url, class: 'rounded-circle mr15 border border-secondary', size: '117x117' %>
</div>
<table class="table">
  <tr>
    <th>total</th>
    <td><%= total_study_time(current_user) %></td>
  </tr>
  <tr>
    <th>進捗</th>
    <td><div class="progress" role="progressbar" aria-label="進捗バー" aria-valuemin="0" aria-valuemax="1000">
    <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: <%= (current_user.hours_with_minutes[0] / 1000.0) * 100 %>%;">
      <%= (current_user.hours_with_minutes[0] / 1000.0 * 100).to_i %>%
    </div>
  </div>
    </td>
  </tr>
  <tr>
    <th>1000時間達成まで</th>
    <td><%= remaining_time_to_1000_hours(current_user) %></td>
  </tr>
  <tr>
    <th scope="row">name</th>
    <td><%= @profile.name %></td>
  </tr>
  <tr>
    <th scope="row">email</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th scope="row">languages</th>
    <td><%= @profile.language %></td>
  </tr>
  <tr>
    <th scope="row">introduction</th>
    <td><%= @profile.introduction %></td>
  </tr>
</table>
<div class='text-center mt-5'>
<%= link_to '編集', edit_profile_path, class: 'btn btn-outline-secondary float-right m-3 btn-sm' %>
</div>