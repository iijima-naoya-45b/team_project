<div class = "text-center mb-5">
  <%= image_tag @profile.avatar.url, class: 'rounded-circle mr15 border border-secondary', size: '117x117' %>
</div>
<table class="table">
  <tr>
    <th>累計勉強時間</th>
    <td><%= total_study_time(current_user) %></td>
  </tr>
  <tr>
    <th>進捗</th>
    <td><%= render 'shared/progress' %></td>
  </tr>
  <tr>
    <th>1000時間達成まで</th>
    <td><%= remaining_time_to_1000_hours(current_user) %></td>
  </tr>
  <tr>
    <th scope="row"><%= Profile.human_attribute_name(:name) %></th>
    <td><%= @profile.name %></td>
  </tr>
  <tr>
    <th scope="row"><%= User.human_attribute_name(:email)%></th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th scope="row"><%= Profile.human_attribute_name(:language)%></th>
    <td><%= @profile.language %></td>
  </tr>
  <tr>
    <th scope="row"><%= Profile.human_attribute_name(:introduction)%></th>
    <td><%= @profile.introduction %></td>
  </tr>
</table>
<div class='text-center mt-5'>
  <%= link_to '編集', edit_profile_path, class: 'btn btn-outline-secondary float-right m-3 btn-sm' %>
</div>