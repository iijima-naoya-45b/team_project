<div class="container">
  <div class="row mt-1">
    <div class="col-lg-10 offset-lg-1">
      <%= render 'search', q: @q, url: curriculum_logs_path %>
    </div>
  </div>
  <p><strong>total:<%= total_study_time(current_user) %></strong></p>
  <p><strong>1000時間まであと<%= remaining_time_to_1000_hours(current_user) %></strong></p>
  
  
  <div class="text-center my-3">
    <h1><%= current_user.profile.name %>'s logs</h1> 
    <% if current_user.profile.avatar.present? %>
      <%= link_to profile_path do %>
        <%= image_tag current_user.profile.avatar.url, class: 'rounded-circle mr15', width: '100', height: '100' %> 
      <% end %> 
    <% else %>
      <%= link_to profile_path do %>
        <%= image_tag 'kuchaman.jpeg', class: 'rounded-circle mr15', width: '100', height: '100' %> 
      <% end %> 
    <% end %>  
  </div>
  <div class = "container">
    <div class="box-body table-responsive no-padding ">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Time</th>
            <th>Curriculum</th>
            <th>Title</th>
            <th> </th>
          </tr>
        </thead>
        <%= render @curriculum_logs %>
      </table>
      <%= paginate @curriculum_logs, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>
