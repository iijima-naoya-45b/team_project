<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto text-center">
      <h3>パスワードリセット</h3>
      <%= form_with model: @user, url: password_reset_path(@token) do |f| %><!--fはdo-endの中だけで使えるローカル変数-->
        <%= render 'shared/error_message', object: f.object %>
        <div class="mb-3">
					<%= f.label :email %>
          <%= @user.email %>
				</div>
        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", id: "user_password" %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", id: "user_password_confirmation" %>
        </div>
        <%= f.submit 'リセット', class: "btn btn-primary" %><!--data: { disable_with: "登録" })これなに？-->
      <% end %>
      <div class='text-center'>
        <%= link_to(t(".to_login_page"), login_path) %> <!--new_user_session_pathというヘルパーメソッドを指定しており、これはuser_sessions/newへのパスを生成します。-->
      </div>
    </div>
  </div>
</div>