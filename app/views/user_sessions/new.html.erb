<div class="container">
  <div class="row">
    <div class=" col-md-10 col-lg-8 mx-auto">
      <h1 class="h3 mb-3 fw-normal">ログイン</h1>
      <%= form_with url: login_path do |f| %>
          <div class="mb-3">
            <%= f.label :email,for:"floatingInput"%>
            <%= f.email_field :email, class: "form-control",id:"floatingInput", placeholder:"メアド教えてください" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, for:"floatingPassword"%>
            <%= f.password_field :password, class: "form-control", id:"floatingPassword",  placeholder:"Password"%>
          </div>
          <%= f.submit "ログイン", class: "w-100 btn btn-lg  btn-primary" %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to '登録ページへ', new_user_path %>
        <%= link_to 'パスワードをお忘れの方はこちら', '#' %>
      </div>
    </div>
  </div>
</div>